<%= turbo_frame_tag 'new_request_form' do %>
  <div class="bg-gray-100 shadow-md rounded-lg p-6">
    <%= form_with model: request, url: api_v1_requests_path, 
                  data: { turbo_stream: true }, local: true, 
                  class: "space-y-4" do |f| %>
      <div>
        <%= f.label :prompt, 'Prompt', class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :prompt, 
                         class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500", 
                         required: true %>
      </div>
      <div>
        <%= f.submit 'Create Request', 
                     class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    <% end %>
  </div>
<% end %>
